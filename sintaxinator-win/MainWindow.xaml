<Window x:Class="Sintaxinator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ROM Fixer 20XX" Height="446" Width="534" ResizeMode="NoResize" Icon="Graphics\sicon.ico">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FF00FFC5" Offset="0"/>
                <GradientStop Color="#FFFF87FA" Offset="1"/>
                <GradientStop Color="#FF7078CD" Offset="0.523"/>
                <GradientStop Color="#FF38C9C7" Offset="0.195"/>
                <GradientStop Color="#FFAE5CC9" Offset="0.785"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="LetsFuckingGo" Content="LET'S DO THIS" HorizontalAlignment="Left" Margin="260,313,0,0" VerticalAlignment="Top" Width="240" Height="77" Background="#CCFFFFFF" FontFamily="/Fonts/#StopD" FontSize="36" Foreground="#CC000000" BorderBrush="White" Click="LetsFuckingGo_Click"/>
        <Label Content="SINTAX" HorizontalAlignment="Left" Margin="19,0,0,0" VerticalAlignment="Top" FontFamily="Fonts/#StopD" FontSize="36" Foreground="Red"/>
        <Label Content="ROM Deprotector" HorizontalAlignment="Left" Margin="97,18,0,0" VerticalAlignment="Top" FontFamily="Fonts/#Yellowtail" FontSize="47" RenderTransformOrigin="0.5,0.5" Foreground="White">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1.1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="-5.469"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="®" HorizontalAlignment="Left" Margin="128,4,0,0" VerticalAlignment="Top" FontSize="16" Foreground="Red"/>
        <TextBox x:Name="InputFilename" HorizontalAlignment="Left" Height="27" Margin="19,119,0,0" VerticalAlignment="Top" Width="420" FontFamily="Georgia" FontSize="16" FontStyle="Italic" Text="in" MaxLines="1"/>
        <Button x:Name="InputFileSelect" Content="Select" HorizontalAlignment="Left" Margin="444,119,0,0" VerticalAlignment="Top" Width="56" Height="27" Click="InputFileSelect_Click"/>
        <TextBox x:Name="OutputFilename" HorizontalAlignment="Left" Height="27" Margin="19,151,0,0" VerticalAlignment="Top" Width="420" FontFamily="Georgia" FontSize="16" FontStyle="Italic" Text="out" MaxLines="1"/>
        <Button x:Name="OutputFileSelect" Content="Select" HorizontalAlignment="Left" Margin="444,151,0,0" VerticalAlignment="Top" Width="56" Height="27" Click="OutputFileSelect_Click"/>
        <Label x:Name="ErrorMsg" Content="initialising" HorizontalAlignment="Left" Margin="111,90,0,0" VerticalAlignment="Top" Width="240" Foreground="Black" FontFamily="Georgia"/>
        <Label x:Name="ErrorMsg_Copy" Content="OPERATIONS" HorizontalAlignment="Left" Margin="15,183,0,0" VerticalAlignment="Top" Width="240" Foreground="Black" FontFamily="Georgia" FontSize="18" FontWeight="Bold" FontStyle="Italic"/>
        <CheckBox x:Name="EnableBitFlip" Content="XOR Bytes" HorizontalAlignment="Left" Margin="15,215,0,0" VerticalAlignment="Top" IsChecked="True" Foreground="White"/>
        <CheckBox x:Name="EnableReorder" Content="Reorder" HorizontalAlignment="Left" Margin="14,287,0,0" VerticalAlignment="Top" IsChecked="True" Foreground="White"/>
        <CheckBox x:Name="EnableHeaderFix" Content="Fix Header" HorizontalAlignment="Left" Margin="14,332,0,0" VerticalAlignment="Top" IsChecked="True" Foreground="White"/>
        <CheckBox x:Name="EnableHeaderSize" Content="Size" HorizontalAlignment="Left" Margin="28,353,0,0" VerticalAlignment="Top" IsChecked="True" Foreground="White"/>
        <CheckBox x:Name="EnableHeaderComp" Content="Complement" HorizontalAlignment="Left" Margin="72,353,0,0" VerticalAlignment="Top" IsChecked="True" Foreground="White"/>
        <CheckBox x:Name="EnableHeaderChecksum" Content="Checksum" HorizontalAlignment="Left" Margin="163,353,0,0" VerticalAlignment="Top" IsChecked="True" Foreground="White"/>
        <RadioButton x:Name="ReorderBankNo" Content="Use bank nos." HorizontalAlignment="Left" Margin="28,308,0,0" VerticalAlignment="Top" GroupName="ReorderMode" IsChecked="True" Foreground="White"/>
        <RadioButton x:Name="ReorderAuto" Content="Assume order" HorizontalAlignment="Left" Margin="128,308,0,0" VerticalAlignment="Top" GroupName="ReorderMode" Foreground="White"/>
        <RadioButton x:Name="BitFlipsAuto" Content="Auto (attempted)" HorizontalAlignment="Left" Margin="29,234,0,0" VerticalAlignment="Top" GroupName="BitFlips" Foreground="White"/>
        <RadioButton x:Name="BitFlipsManual" Content="As defined ↓" HorizontalAlignment="Left" Margin="148,234,0,0" VerticalAlignment="Top" GroupName="BitFlips" Foreground="White" IsChecked="True"/>
        <TextBox x:Name="ManualBits" HorizontalAlignment="Left" Height="23" Margin="54,255,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181" GotFocus="ManualBits_GotFocus"/>
        <TextBlock HorizontalAlignment="Left" Margin="251,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="88" Width="249" FontSize="9"><Run Language="en-gb" Text="XORs can be defined either as a hex byte by e.g. 0x45 or the positions of bits to flip eg 157 inverts the 1st, 5th and 7th bits"/><LineBreak/><Run Language="en-gb" Text="Separate XORs with | to split the rom into as many parts as you have defined and apply different XOR to each section."/><LineBreak/><Run Language="en-gb" Text="(Header bank will never be modified)"/><LineBreak/><Run Language="en-gb" Text="E.g. for 4 quarters: 0x23|0x67|0x45|0x89 OR 267|12567|157|047"/><LineBreak/><Run Language="en-gb" Text="Enter number in the first box to repeat the pattern"/></TextBlock>
        <CheckBox x:Name="OpenEmu" Content="Open when done" HorizontalAlignment="Left" Margin="392,183,0,0" VerticalAlignment="Top" IsChecked="True" Foreground="White"/>
        <TextBox x:Name="RomType" HorizontalAlignment="Left" Height="18" Margin="74,373,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="25" MaxLength="2" MaxLines="1" FontFamily="Courier New" GotFocus="RomType_GotFocus" Grid.RowSpan="2"/>
        <CheckBox x:Name="EnableHeaderType" Content="Type" HorizontalAlignment="Left" Margin="28,374,0,0" VerticalAlignment="Top" Foreground="White" Grid.RowSpan="2"/>
        <TextBox x:Name="RamSize" HorizontalAlignment="Left" Height="18" Margin="178,373,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="25" MaxLength="2" MaxLines="1" FontFamily="Courier New" GotFocus="RamSize_GotFocus" Grid.RowSpan="2"/>
        <CheckBox x:Name="EnableHeaderRamsize" Content="RAM Size" HorizontalAlignment="Left" Margin="107,374,0,0" VerticalAlignment="Top" Foreground="White" Grid.RowSpan="2"/>
        <Button x:Name="BankCheck" Content="* Overdump Check" HorizontalAlignment="Left" Margin="364,84,0,0" VerticalAlignment="Top" Width="136" Click="BankCheck_Click"/>
        <!--<Button x:Name="TestSwap" Content="* Just Test Swap" HorizontalAlignment="Left" Margin="364,57,0,0" VerticalAlignment="Top" Width="136" Click="TestSwap_Click"/>-->
        <TextBox x:Name="FlipRepeat" HorizontalAlignment="Left" Height="23" Margin="16,255,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="23" MaxLines="1"/>
        <Label Content="x" HorizontalAlignment="Left" Margin="38,253,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BBDTest" Content="* BBD Test" HorizontalAlignment="Left" Margin="421.149,62.04,0,0" VerticalAlignment="Top" Width="79.284" Click="BBDTest_Click"/>
        <!--<Image HorizontalAlignment="Left" Height="64" Margin="347,225,0,0" VerticalAlignment="Top" Width="48" Source="Graphics/readme-b.png"/>-->

    </Grid>
</Window>
